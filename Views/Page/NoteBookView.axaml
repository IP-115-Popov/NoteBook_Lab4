<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400"
             x:Class="Notebook_Laba4.Views.Page.NoteBookView">
	<Grid RowDefinitions="*,0.1*">
		<TextBox AcceptsReturn="True" Grid.Row="0" Name="NoteText" Text="{Binding $parent[Window].DataContext.MainText}"/>
		<Grid Grid.Row="1" ColumnDefinitions="*,*">
			<Button Classes="b1" Grid.Column="0" Content="Open" Command="{Binding $parent[Window].DataContext.OpenFileButton}"/>
			<Button Classes="b1" Grid.Column="1" Content="Save" Command="{Binding $parent[Window].DataContext.SaveFileButton}"/>
		</Grid>
	</Grid>
</UserControl>
